<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <menu id="menu">
  <section>
    <item>
      <attribute name="label" translatable="yes">Save Asâ€¦</attribute>
      <attribute name="action">win.action_save_as</attribute>
    </item>
  </section>
  <section>
    <item>
      <attribute name="label" translatable="yes">Preferences</attribute>
      <attribute name="action">win.action_prefs</attribute>
    </item>
    <item>
      <attribute name="label" translatable="yes">Keyboard Shortcuts</attribute>
      <attribute name="action">win.action_keys</attribute>
    </item>
    <item>
      <attribute name="label" translatable="yes">About Dot Matrix</attribute>
      <attribute name="action">win.action_about</attribute>
    </item>
  </section>
  </menu>
  <template class="DotMatrixMainWindow" parent="AdwApplicationWindow">
    <property name="title">Dot Matrix</property>
    <child>
      <object class="GtkBox" id="box">
        <property name="orientation">vertical</property>
        <child>
          <object class="AdwHeaderBar" id="headerbar">
            <child type="end">
              <object class="GtkMenuButton" id="menu_button">
                <property name="can-focus">1</property>
                <property name="menu-model">menu</property>
                <property name="icon-name">open-menu-symbolic</property>
              </object>
            </child>
            <child type="end">
              <object class="GtkColorButton" id="line_color_button">
                <property name="title" translatable="yes">Pick a Line Color</property>
                <property name="tooltip-text" translatable="yes">Line Color</property>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="new_button">
                <property name="tooltip-text" translatable="yes">New Glyph</property>
                <property name="icon-name">tab-new-symbolic</property>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="undo_button">
                <property name="sensitive">0</property>
                <property name="tooltip-text" translatable="yes">Undo Recent Path</property>
                <property name="icon-name">edit-undo-symbolic</property>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="redo_button">
                <property name="sensitive">0</property>
                <property name="tooltip-text" translatable="yes">Redo Recent Path</property>
                <property name="icon-name">edit-redo-symbolic</property>
              </object>
            </child>
            <child type="title">
              <object class="GtkBox"/>
            </child>
            <style>
              <class name="dm-bar"/>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkOverlay">
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <child>
                  <object class="GtkBox" id="dabox">
                    <property name="vexpand">1</property>
                    <property name="homogeneous">1</property>
                    <property name="orientation">vertical</property>
                    <style>
                      <class name="dm-view"/>
                    </style>
                    <child>
                      <object class="GtkDrawingArea" id="da">
                        <property name="valign">center</property>
                        <property name="halign">center</property>
                      </object>
                  </child>
                  </object>
                </child>
              </object>
            </child>
            <child type="overlay">
              <object class="GtkMenuButton" id="line_type_button">
                <property name="icon-name">document-edit-symbolic</property>
                <property name="valign">end</property>
                <property name="halign">end</property>
                <property name="margin-bottom">12</property>
                <property name="margin-end">12</property>
                <property name="tooltip-text" translatable="yes">Line Types</property>
                <property name="direction">up</property>
                <property name="popover">
                  <object class="GtkPopover">
                    <child>
                      <object class="GtkBox" id="box2">
                        <property name="spacing">6</property>
                        <property name="orientation">vertical</property>
                        <child>
                          <object class="GtkButton" id="line_straight_button">
                            <property name="child">
                              <object class="AdwButtonContent">
                                <property name="icon-name">line-straight-symbolic</property>
                                <property name="label" translatable="yes">Line</property>
                              </object>
                            </property>
                            <style>
                              <class name="flat" />
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton" id="line_curve_button">
                            <property name="child">
                              <object class="AdwButtonContent">
                                <property name="icon-name">line-curve-symbolic</property>
                                <property name="label" translatable="yes">Arc</property>
                              </object>
                            </property>
                            <style>
                              <class name="flat" />
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton" id="line_curve_reverse_button">
                            <property name="child">
                              <object class="AdwButtonContent">
                                <property name="icon-name">line-curve-symbolic</property>
                                <property name="label" translatable="yes">Inverted Arc</property>
                              </object>
                            </property>
                            <style>
                              <class name="rotated"/>
                              <class name="flat" />
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </property>
                <style>
                  <class name="list-action-button"/>
                  <class name="accent-button"/>
                  <class name="flat"/>
                </style>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
